{
  "name": "mugen-poap",
  "version": "1.0.0",
  "description": "This project demonstrates a basic Hardhat use case. It comes with a sample contract, a test for that contract, and a Hardhat Ignition module that deploys that contract.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-timing": "npx hardhat run scripts/check-timing.js",
    "check-balance:testnet": "npx hardhat run scripts/check-balance.js --network animechain_testnet",
    "check-balance:mainnet": "npx hardhat run scripts/check-balance.js --network animechain_mainnet",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network animechain_testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network animechain_mainnet",
    "update-mint-window:mainnet": "npx hardhat run scripts/update-mint-window.js --network animechain_mainnet",
    "test-contract:testnet": "npx hardhat run scripts/test-contract.js --network animechain_testnet",
    "test-contract:mainnet": "npx hardhat run scripts/test-contract.js --network animechain_mainnet"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.24.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^16.5.0"
  }
}
